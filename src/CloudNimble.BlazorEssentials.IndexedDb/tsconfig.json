{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./wwwroot",
    "rootDir": "./Scripts",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "strict": false,
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "Scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bin",
    "obj",
    "wwwroot"
  ]
}
